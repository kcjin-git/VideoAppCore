@page "/"
@namespace TeamWork.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TeamWork</title>
    <base href="~/" />
    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />

    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/summernote-0.8.18-dist/summernote-lite.min.css" rel="stylesheet">
    <link href="~/css/signIn.css" rel="stylesheet">

</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>

    <script src="_framework/blazor.server.js"></script>

    <script src="/jquery/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/summernote-0.8.18-dist/summernote-lite.min.js"></script>

    <script>
        window.addEventListener = (editor) => {
            if (editor == null)
                return;

            var toolbar = [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ];

            var editHeight = $(window).height() * 0.6;
            var obj = "#" + editor;
            $(document).ready(function () {
                $(obj).summernote(
                    {
                        tabsize: 2,
                        //airMode: true,
                        height: editHeight,
                        lang: 'ko-KR',
                        toolbar: toolbar
                    }
                    );
            });
        }

        window.getData = (editor) => {
            var obj = "#" + editor;
            return $(obj).summernote('code');
        }

        window.setData = (editor, data) => {
            var obj = "#" + editor;
            $(obj).summernote('code', data);
        }

        
    </script>


</body>
</html>
